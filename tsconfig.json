{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}